// =================== script.js ===================
function searchSkill() {
  const skill = document.getElementById("skillInput").value;
  const resultsDiv = document.getElementById("searchResults");
  resultsDiv.innerHTML = `<p>Searching for users with skill: <strong>${skill}</strong>...</p>`;

  // Simulate backend call
  setTimeout(() => {
    resultsDiv.innerHTML = `<ul>
      <li><strong>Jane Doe</strong> - Offers: Photoshop</li>
      <li><strong>John Smith</strong> - Offers: Photoshop, Illustrator</li>
    </ul>`;
  }, 1000);
}
